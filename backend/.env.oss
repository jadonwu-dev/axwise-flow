# OSS Mode Environment Configuration
# This configuration is for open-source contributors and local development


# Minimal setup for OSS showcase (no per-file edits)
# You only need to set these here (or via environment):
#   OSS_MODE=true
#   DATABASE_URL=***REDACTED***
#   GEMINI_API_KEY=***REMOVED***
# Notes:
# - You do NOT need to edit individual route.ts/page.tsx files; code reads from env and shared helpers.
# - In OSS mode, the backend accepts dev tokens starting with "dev_test_token_";
#   the frontend auto-injects this via NEXT_PUBLIC_DEV_AUTH_TOKEN (defaults to DEV_TOKEN_REDACTED).

# OSS Mode Flag
OSS_MODE=true

# API Keys
# Get your Gemini API key from: https://aistudio.google.com/app/api_keys
GEMINI_API_KEY=AIzaSyAWUUCQCQFfGttQt0Kjilg6C-99tQh5rM4

# LLM Provider Configuration
LLM_PROVIDER=gemini

# Database Configuration - PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/axwise
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=axwise
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# LLM Configuration
# Gemini
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_MAX_TOKENS=65536
GEMINI_CONTEXT_WINDOW=1048576
GEMINI_TEMPERATURE=0.0
GEMINI_TOP_P=0.95
GEMINI_TOP_K=1

# CORS Settings - Allow local development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Authentication - Disabled for OSS Mode
ENABLE_CLERK_VALIDATION=false
NEXT_PUBLIC_ENABLE_CLERK_AUTH=false

# Customer Research Configuration
RESEARCH_CHAT_RATE_LIMIT=30
RESEARCH_QUESTIONS_RATE_LIMIT=20
RESEARCH_REQUEST_TIMEOUT=30

# Multi-Stakeholder Analysis Configuration
ENABLE_MULTI_STAKEHOLDER=true
MAX_STAKEHOLDERS=4
STAKEHOLDER_CONFIDENCE_THRESHOLD=0.3
ENABLE_CROSS_STAKEHOLDER_ANALYSIS=true

# Performance Optimization Configuration
MAX_PERSONAS=5
TRUNCATED_CONTENT_LIMIT=1000
MEDIUM_CONTENT_LIMIT=4000

# Concurrency Configuration
PAID_TIER_CONCURRENCY=12
PAID_TIER_STAKEHOLDER_CONCURRENCY=10

# Server Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=false

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Environment
ENVIRONMENT=development

